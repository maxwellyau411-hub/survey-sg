{
  "compilerOptions": {
    "jsx": "react-jsx",            
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",           
    "resolveJsonModule": true
  },
  "include": ["src"]
}
